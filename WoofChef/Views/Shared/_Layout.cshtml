<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["WoofChef"] - WoofChef</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WoofChef.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqylQvZ6jIW3" crossorigin="anonymous">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">

</head>
<body id="1">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <img src="https://cdn.discordapp.com/attachments/1157765215824400484/1171326332416819250/Logo.png?ex=655c45a7&is=6549d0a7&hm=9c251c0f92356f252b93b67500238e699bd37a86c90a5cdae9a8c6750346ae90&" width="100" height="100" class="d-inline-block align-top" alt="Logo">

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/Privacy" class="nav-link text-dark">Menú</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Login/Login" class="nav-link text-dark">Login</a>
                        </li>
                        @if (TempData.ContainsKey("UserRole"))
                        {
                            string userRole = TempData["UserRole"] as string;

                            if (userRole == "Admin")
                            {
                                 <li class="nav-item">
                                    <a href="/Expediente" class="nav-link text-dark">Expediente</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Ingredient" class="nav-link text-dark">Ingredientes</a>
                                </li>
                            }
                            <!-- Agrega más condiciones según tus roles -->
                        }
                    </ul> 
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div>
            <a href="https://www.instagram.com/woofchef_/" target="_blank" class="icon-large"><i class="fab fa-instagram"></i></a>
            <a href="https://wa.me/87522246" target="_blank" class="icon-large"><i class="fab fa-whatsapp"></i></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

